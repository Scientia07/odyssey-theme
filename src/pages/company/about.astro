<style>
	.highlight {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--theme-primary);
		margin-top: 1rem;
	}

	/* Vision Section */
	.vision-section {
		margin: var(--section-margin) auto;
		text-align: center;
	}
	.vision-section h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}
	.vision-section .lead {
		font-size: 1.3rem;
		margin-bottom: 3rem;
		color: var(--theme-text-secondary);
	}
	.vision-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}
	.vision-item {
		padding: 2rem 1rem;
		background: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}
	.vision-item svg {
		width: 3rem;
		height: 3rem;
		color: var(--theme-primary);
	}
	.vision-item p {
		font-size: 1.1rem;
		margin: 0;
	}

	/* Text Highlights */
	.highlight-text {
		font-size: 1.3rem;
		line-height: 1.8;
		text-align: center;
		margin: 2rem 0;
	}
	.belief {
		font-size: 1.2rem;
		text-align: center;
		margin-top: 2rem;
		padding: 2rem;
		background: var(--theme-surface-1);
		border-radius: var(--theme-shape-radius);
	}

	/* Mission Section */
	.mission-section {
		margin: var(--section-margin) auto;
	}
	.mission-section h2 {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		text-align: center;
	}
	.mission-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}
	.mission-column h3 {
		font-size: 1.3rem;
		margin-bottom: 1.5rem;
	}
	.problem-list {
		list-style: none;
		padding: 0;
	}
	.problem-list li {
		padding: 1rem;
		margin: 0.5rem 0;
		background: var(--theme-surface-1);
		border-left: 4px solid var(--theme-text-secondary);
		border-radius: var(--theme-shape-radius);
	}
	.solution-list {
		list-style: none;
		padding: 0;
	}
	.solution-list li {
		padding: 1rem;
		margin: 0.5rem 0;
		background: var(--theme-surface-1);
		border-left: 4px solid var(--theme-primary);
		border-radius: var(--theme-shape-radius);
		display: flex;
		align-items: start;
		gap: 0.5rem;
	}
	.solution-list svg {
		width: 1.5rem;
		height: 1.5rem;
		color: var(--theme-primary);
		flex-shrink: 0;
		margin-top: 0.2rem;
	}
	.mission-goal {
		font-size: 1.5rem;
		text-align: center;
		margin-top: 3rem;
		padding: 2rem;
		background: var(--theme-primary);
		color: white;
		border-radius: var(--theme-shape-radius);
	}

	/* Founder Section */
	.founder-section {
		margin: var(--section-margin) auto;
	}
	.founder-section h2 {
		font-size: 2.5rem;
		margin-bottom: 3rem;
		text-align: center;
	}
	.founder-card {
		display: grid;
